USE_INTERNAL_ENGINE=true

# Debug flags
SHEETS_DEBUG_FILTERS=true
IMAP_DEBUG=false
MONDAY_DEBUG=false

# SMTP (Gmail App Password recommended)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=app-password-here
SMTP_TO=you@example.com

# Google Service Account (choose one)
GOOGLE_SERVICE_ACCOUNT_JSON=C:\\path\\to\\gsa.json
# GOOGLE_SERVICE_ACCOUNT_BASE64=...
# GOOGLE_SA_EMAIL=...
# GOOGLE_SA_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n

# Gmail IMAP (App Password)
IMAP_HOST=imap.gmail.com
IMAP_PORT=993
IMAP_USER=you@example.com
IMAP_PASS=app-password-here
IMAP_TLS=true

# Slack
SLACK_BOT_TOKEN=xoxb-...
SLACK_CHANNEL=#general

# Telegram
TELEGRAM_BOT_TOKEN=123456:ABCDEF
TELEGRAM_CHAT_ID=123456789

# WhatsApp via Twilio
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_TO=whatsapp:+9725xxxxxxx

# Monday.com
MONDAY_API_TOKEN=your_monday_token
